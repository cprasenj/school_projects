doctype html
html
 head
  title Student Summary
  link(rel='stylesheet', href='/stylesheets/style.css')  
 body
  a(href="/") Home
  h1 Student Summary
  p
   div
    div Name: #{name}&nbsp;&nbsp;&nbsp;&nbsp;
     a(href="/student_edit/#{id}") EDIT
    div Grade: 
     a(href="/grade/#{grade_id}") #{grade_name}
   div
    table(border="4")
     tr
      th Subject
      th Max
      th Score
     each subject in subjects
      tr
       td
        a(href="/subject/#{subject.id}") #{subject.name}
       td #{subject.maxScore}
       td #{subject.score}